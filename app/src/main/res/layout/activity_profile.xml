<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/layout_curve_login_signup">
        <TextView
            android:id="@+id/back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableLeft="@drawable/ic_back"
            android:background="#484c7f"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textAllCaps="true"
            android:textColor="#fefefe"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp"
            android:id="@+id/profile_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:civ_border_color="@color/colorPrimary" />

    <ImageView
        android:id="@+id/name_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_profile_image"
        android:src="@drawable/ic_person"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@id/set_profile_image"
        android:layout_toRightOf="@id/name_icon"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/edit_icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_edit_text"
        android:src="@drawable/ic_mode_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text_view"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="30dp"
        android:text="User Name"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/name_edit_text"
        android:background="#9E9A9A"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_edit_text"
        android:src="@drawable/ic_email"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/name_edit_text"
        android:layout_toRightOf="@id/name_icon"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/edit_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_profile_image"
        android:src="@drawable/ic_mode_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_text_view"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="30dp"
        android:text="Email"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/email_edit_text"
        android:background="#9E9A9A"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/college_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edit_text"
        android:src="@drawable/ic_school"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/college_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College"
        android:layout_below="@id/email_edit_text"
        android:layout_toRightOf="@id/name_icon"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:id="@+id/edit_icon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edit_text"
        android:src="@drawable/ic_mode_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/college_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/college_text_view"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="30dp"
        android:text="College"
        android:textSize="18sp"/>



</RelativeLayout>