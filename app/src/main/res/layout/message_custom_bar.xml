<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image1" />

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/message_text_view"
        android:layout_toEndOf="@+id/message_profile_image"
        android:text="receiver messages here"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/sender_messsage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:background="@drawable/send_message_text_view"
        android:text="sender messages"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:id="@+id/seen_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seen"
        android:layout_below="@id/receiver_message_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"/>


</RelativeLayout>